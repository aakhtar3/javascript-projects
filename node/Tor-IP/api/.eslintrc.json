{
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "backtick"
      ],
      "semi": [
        "error",
        "always"
      ],
      "comma-spacing": [
        1,
        {
          "before": false,
          "after": true
        }
      ],
      "template-curly-spacing": [
        "error",
        "always"
      ],
      "keyword-spacing": "error",
      "space-infix-ops": "error"
    },
    "globals": {
      "before": false,
      "after": false,
      "beforeEach": false,
      "afterEach": false,
      "describe": false,
      "it": false,
      "expect": false,
      "skip": false
    }
}